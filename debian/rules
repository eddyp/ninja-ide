#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ \
		--with python2

override_dh_install:
	dh_install
	rm -rf $(CURDIR)/debian/ninja-ide/usr/share/ninja-ide/ninja_ide/doc/
	find $(CURDIR)/debian/ninja-ide -name "*jquery*" -delete
	find $(CURDIR)/debian/ninja-ide -name "pyflakes" -type d | xargs rm -rf
